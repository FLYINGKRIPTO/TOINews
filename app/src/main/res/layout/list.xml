<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/bg2">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/eight"
        android:foreground="@drawable/bg3"
        app:cardCornerRadius="@dimen/eight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/darkGrey"
                tools:background="@drawable/bg2" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/darkGrey" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginTop="@dimen/eight"
                android:maxLines="1"
                android:textColor="@color/yellow"
                android:textSize="@dimen/smallText"
                android:typeface="serif"
                tools:text="Rupert Jones | The Guardian" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/date"
                android:layout_marginBottom="@dimen/four"
                android:layout_marginEnd="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginTop="@dimen/eight"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:maxLines="3"
                android:textColor="@color/white"
                android:textSize="@dimen/MediumText"
                android:typeface="sans"
                tools:text="@string/Desc" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/four"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:layout_marginStart="@dimen/eight"
                android:fontFamily="@font/charis"
                android:textColor="@color/white"
                android:textSize="@dimen/smallText"
                android:typeface="serif"
                tools:text="@string/smapleData" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>